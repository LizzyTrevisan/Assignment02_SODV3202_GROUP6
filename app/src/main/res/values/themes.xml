<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="CelebrityGuessTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/dark_greenish</item>
        <item name="colorAccent">@color/light_navish</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:background">@color/background</item>

        <item name="android:buttonStyle">@style/Widget.CelebrityGuessTheme.Button</item>

    </style>

    <style name="Widget.CelebrityGuessTheme.Button" parent="Widget.AppCompat.Button.Borderless.Colored">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/navish</item>
        <item name="android:radius">10dp</item>
        <item name="android:background">@drawable/rounded_corners_btn</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>